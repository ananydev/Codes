class Solution {
    public int countPartitions(int[] nums)
    {
        int n = nums.length;
        int tSum=0;

        for(int num : nums)
            {
                tSum+=num;
            }
        int lSum=0;
        int cnt=0;

        for( int i=0; i<n-1; i++)
            {
                lSum+=nums[i];
                int rSum= tSum-lSum;

                if((lSum - rSum)%2==0)
                {
                    cnt++;
                }
            }
        return cnt;

        
        
    }
}
