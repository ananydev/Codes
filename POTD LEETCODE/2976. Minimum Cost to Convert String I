import java.util.*;

class Solution {

    public long minimumCost(String source, String target, char[] original, char[] changed, int[] cost) {

        // Step 1: Build graph (adj list)
        List<List<int[]>> graph = new ArrayList<>();
        for (int i = 0; i < 26; i++) {
            graph.add(new ArrayList<>());
        }

        for (int i = 0; i < original.length; i++) {
            int u = original[i] - 'a';
            int v = changed[i] - 'a';
            int c = cost[i];
            graph.get(u).add(new int[]{v, c});
        }

        // Step 2: Get all-pair shortest path
        long[][] d = floyd(graph);

        // Step 3: Compute answer
        long total = 0;

        for (int i = 0; i < source.length(); i++) {
            char s = source.charAt(i);
            char t = target.charAt(i);

            if (s == t) continue;

            int src = s - 'a';
            int dest = t - 'a';

            if (d[src][dest] == Long.MAX_VALUE) {
                return -1;  // impossible conversion
            }

            total += d[src][dest];
        }

        return total;
    }

    // Floyd Warshall
    public long[][] floyd(List<List<int[]>> graph) {

        long[][] d = new long[26][26];

        // Initialize distances
        for (int i = 0; i < 26; i++) {
            Arrays.fill(d[i], Long.MAX_VALUE);
            d[i][i] = 0;
        }

        // Fill direct edges
        for (int u = 0; u < 26; u++) {
            for (int[] edge : graph.get(u)) {
                int v = edge[0];
                int w = edge[1];
                d[u][v] = Math.min(d[u][v], w);
            }
        }

        // Floyd-Warshall
        for (int k = 0; k < 26; k++) {
            for (int i = 0; i < 26; i++) {
                for (int j = 0; j < 26; j++) {

                    if (d[i][k] != Long.MAX_VALUE && d[k][j] != Long.MAX_VALUE) {
                        d[i][j] = Math.min(d[i][j], d[i][k] + d[k][j]);
                    }
                }
            }
        }

        return d;
    }
}
