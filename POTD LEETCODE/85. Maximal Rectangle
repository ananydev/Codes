import java.util.*;

public class Solution 
{

    // Helper function to calculate largest rectangle area in histogram
    private int largestRectangleArea(int[] arr)
    {
        int n = arr.length;
        Stack<Integer> st = new Stack<>();
        int maxArea = 0;

        for (int i = 0; i < n; i++) 
        {
            while (!st.isEmpty() && arr[st.peek()] > arr[i])
            {
                int element = st.peek();
                st.pop();
                int nsc = i;
                int psc = st.isEmpty() ? -1 : st.peek();
                maxArea = Math.max(maxArea, arr[element] * (nsc - psc - 1));
            }
            st.push(i);
        }

        while (!st.isEmpty()) 
        {
            int nsc = n;
            int element = st.peek();
            st.pop();
            int psc = st.isEmpty() ? -1 : st.peek();
            maxArea = Math.max(maxArea, arr[element] * (nsc - psc - 1));
        }

        return maxArea;
    }

    // Main function as per required signature
    public int maximalRectangle(char[][] matrix)
    {
        if (matrix.length == 0) return 0;
        int rows = matrix.length;
        int cols = matrix[0].length;
        int maxArea = 0;

        int[] heights = new int[cols];

        for (int i = 0; i < rows; i++)
        {
            for (int j = 0; j < cols; j++) 
            {
                // Update heights based on '1' and '0' characters
                if (matrix[i][j] == '1') 
                
                {
                    heights[j] += 1;
                }
                else 
                {
                    heights[j] = 0;
                }
            }

            int area = largestRectangleArea(heights);
            maxArea = Math.max(maxArea, area);
        }

        return maxArea;
    }
}
